<h1>New User</h1>


<%= form_for(@user) do |f| %>
	<% if @user.errors.full_messages.any? %>
	  <ul>
	    <% @user.errors.full_messages.each do |error_message| %>
	      <li><%= error_message %></li> <br />
	   <% end %>
	  <ul>
  	<% end %>
	<%= f.label :name %>
	<%= f.text_field :name %><br />
	<%= f.label :email %>
	<%= f.text_field :email %><br />
	<%= f.label :password %>
	<%= f.password_field :password %><br >
	<%= f.submit :create %>

<% end %>